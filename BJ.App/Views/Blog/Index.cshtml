@using BJ.Contract.ViewModel;
@model IEnumerable<BlogUserViewModel>
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@section Styles {
    <link rel="stylesheet" href="~/BoostJuice/css/healthy.css">

}
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<div class="boost-main-content">
    <div class="main-fold-angle bg-image ">
    </div>
    <div id="blog-posts" class="container">
        @if(Model.Count() > 0 && Model != null)
        {
            foreach(var item in Model)
            {
                <div class="row" style="display: block;">
                    <div class="six columns">
                        <p>
                            <a href="https://www.boostjuice.vn/wellbeing/thong-tin-dinh-duong/">
                                <img src="@Configuration["BaseAddress"]/ImageBlog/@item.ImagePath" title="@item.Title" alt="@item.Title" class="blog-cover">
                            </a>
                        </p>
                    </div>
                    <div class="six columns">
                       
                        

                        <h2> @Html.Raw(item.Title)</h2>
                        <p>@Html.Raw(item.ShortDesc)</p>
                        <a href="/@culture/healthy/@item.Id/@item.Alias"><localize>Read more</localize></a>
                    </div>
                </div>
            }
        }
        
      






    </div>


</div>