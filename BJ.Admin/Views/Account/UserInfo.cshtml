@model ChangePassword;
@using BJ.Contract.Account;
<div class="page-header no-gutters has-tab">
    <h2 class="font-weight-normal">Cài đặt</h2>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#tab-account">Tài khoản</a>
        </li>

    </ul>
</div>
<div class="container">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="tab-account">
            <form asp-action="UserInfo" method="post">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thông tin</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-semibold" for="userName">Họ và tên:</label>
                                <input type="text" class="form-control" id="userName" placeholder="User Name" value="@User.Claims.Where(x => x.Type == "FullName").Select(x => x.Value).FirstOrDefault()" asp-for="@Model.EmployeeName" readonly>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="font-weight-semibold" for="UserName">Email:</label>
                                <input type="text" class="form-control" id="UserName" placeholder="UserName" value="@Model.UserName" asp-for="@Model.UserName" readonly>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thay đổi mật khẩu</h4>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label class="font-weight-semibold" for="oldPassword">Mật khẩu cũ:</label>
                                    <input type="password" class="form-control" id="oldPassword" placeholder="Mật khẩu cũ" asp-for="@Model.OldPassword">
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="font-weight-semibold" for="newPassword">Mật khẩu mới:</label>
                                    <input type="password" class="form-control" id="newPassword" placeholder="Mật khẩu mới" asp-for="@Model.NewPassword">
                                </div>

                                <div class="form-group col-md-3">
                                    <button type="submit" class="btn btn-primary m-t-30">Thay đổi</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </form>
            
        </div>
       
    </div>
</div>
