@using BJ.Contract.Translation.News;
@model CreateNewsTranslationDto
<form asp-action="CreateLanguage" method="post" enctype="multipart/form-data">
    <div class="page-header">
        <h2 class="header-title">Tạo mới ngôn ngữ</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                <a href="/tat-ca-tin-tuc.html " class="breadcrumb-item">Tất cả tin tức</a>
                <a href="/chi-tiet-tin-tuc/@ViewBag.Id" class="breadcrumb-item">@ViewBag.Title</a>

                <span class="breadcrumb-item active">Tạo mới ngôn ngữ</span>
            </nav>
        </div>
    </div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                <div class="m-l-15">
                    <h4 class="m-b-0">Tên: @ViewBag.Title</h4>
                </div>
            </div>
            <div class="m-b-15">
                <button type="submit" class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin tin tức</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên tin tức</label>
                        <input type="text" class="form-control" id="productName" placeholder="Tên tin tức" asp-for="@Model.Title" required>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productNews">Ngôn ngữ</label>
                        <select class="select2" asp-for="@Model.LanguageId" asp-items="ViewBag.Language">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaDesc">Mô tả ngắn</label>
                        <textarea class="form-control" id="shortDescription" placeholder="Mô tả" asp-for="@Model.ShortDesc"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaDesc">Mô tả</label>
                        <textarea class="form-control" id="Description" placeholder="Mô tả" asp-for="@Model.Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaDesc">MetaDesc</label>
                        <input type="text" class="form-control" id="productPrice" placeholder="MetaDesc" asp-for="@Model.MetaDesc" required>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaDesc">MetaKey</label>
                        <input type="text" class="form-control" id="productPrice" placeholder="MetaDesc" asp-for="@Model.MetaKey" required>
                    </div>
                </div>
            </div>
        </div>


    </div>
</form>
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

    <script src="~/assets/vendors/select2/select2.min.js"></script>
    <script>
        $('.select2').select2();
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.js"></script>
    <script>
        $('#shortDescription').summernote({
            placeholder: 'Mô tả ngắn',

            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'subscript', 'superscript', 'clear']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['view', ['fullscreen', 'codeview']],
                ['help', ['help']]
            ],
            fontNames: ['Roboto', 'Arial', 'Times New Roman', 'Arial Black', 'Courier New',
                'Helvetica', 'Verdana', 'Garamond', 'Open Sans', 'Didot', 'Tahoma', 'Calibri', 'Courier', 'Montserrat'],
            tabsize: 2,
            height: 500,
        });
        $('#Description').summernote({
            placeholder: 'Mô tả',

            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'subscript', 'superscript', 'clear']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'hr']],
                ['view', ['fullscreen', 'codeview']],
                ['help', ['help']]
            ],
            fontNames: ['Roboto', 'Arial', 'Times New Roman', 'Arial Black', 'Courier New',
                'Helvetica', 'Verdana', 'Garamond', 'Open Sans', 'Didot', 'Tahoma', 'Calibri', 'Courier', 'Montserrat'],
            tabsize: 2,
            height: 500,
        });
    </script>
}