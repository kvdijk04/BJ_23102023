@using BJ.Contract.Translation.SubCategory;
@model CreateSubCategoryTranslationDto
<form asp-action="CreateLanguage" method="post" enctype="multipart/form-data">
    <div class="page-header">
        <h2 class="header-title">Tạo mới ngôn ngữ</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                <a href="/tat-ca-danh-muc-con.html " class="breadcrumb-item">Tất cả danh mục con</a>
                <a href="/chi-tiet-danh-muc-con/@ViewBag.Id" class="breadcrumb-item">@ViewBag.SubCatName</a>

                <span class="breadcrumb-item active">Tạo mới ngôn ngữ</span>
            </nav>
        </div>
    </div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                <div class="m-l-15">
                    <h4 class="m-b-0">Tên: @ViewBag.SubCatName</h4>
                </div>
            </div>
            <div class="m-b-15">
                <button type="submit" class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin danh mục con</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên danh mục con</label>
                        <input type="text" class="form-control" id="productName" placeholder="Tên danh mục con" asp-for="@Model.SubCatName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productCategory">Ngôn ngữ</label>
                        <select class="select2" asp-for="@Model.LanguageId" asp-items="ViewBag.Language">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaDesc">Mô tả</label>
                        <input type="text" class="form-control" id="productPrice" placeholder="Mô tả" asp-for="@Model.Description">
                    </div>

                </div>
            </div>
        </div>


    </div>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="~/assets/vendors/select2/select2.min.js"></script>
<script>
    $('.select2').select2();
</script>