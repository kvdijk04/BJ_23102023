@using BJ.Contract.Account;
@model LoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Enlink - Admin Dashboard Template</title>

    <!-- Favicon -->
    <link href="~/assets/images/logo/favicon.png" rel="shortcut icon">
    <link rel="icon" href="~/assets/images/logo/cropped-iconboostweb-32x32.png" sizes="32x32">
    <link rel="icon" href="~/assets/images/logo/cropped-iconboostweb-192x192.png" sizes="192x192">
    <link rel="apple-touch-icon-precomposed" href="~/assets/images/logo/cropped-iconboostweb-180x180.png">
    <meta name="msapplication-TileImage" content="~/assets/images/logo/cropped-iconboostweb-270x270.png">
    <!-- page css -->
    <!-- Core css -->
    <link href="~/assets/css/app.min.css" rel="stylesheet">

</head>

<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('assets/images/others/login-3.png')">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between m-b-30">
                                        <img class="img-fluid" alt="" src="~/assets/images/logo/cropped-iconboostweb-270x270.png" style="width:30%;height:30%">
                                        <h2 class="m-b-0">Sign In</h2>
                                    </div>
                                    <form asp-action="LoginAccount" asp-controller="Login" method="post">
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="userName">Username:</label>
                                            <div class="input-affix">
                                                <i class="prefix-icon anticon anticon-user"></i>
                                                <input type="text" class="form-control" id="userName" placeholder="Username" asp-for="UserName" required>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="password">Password:</label>
                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-lock"></i>
                                                <input type="password" class="form-control" id="password" placeholder="Password" asp-for="Password" required>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @if (TempData["Error"] != null)
                                            {
                                                <p class="text-danger">@TempData["Error"]</p>

                                            }
                                        </div>
                                        <div class="form-group">

                                            <div class="d-flex align-items-center justify-content-between">
                                             
                                                <button class="btn btn-primary">Sign In</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>


    <!-- Core Vendors JS -->
    <script src="~/assets/js/vendors.min.js"></script>

    <!-- page js -->
    <!-- Core JS -->
    <script src="~/assets/js/app.min.js"></script>
   
</body>

</html>