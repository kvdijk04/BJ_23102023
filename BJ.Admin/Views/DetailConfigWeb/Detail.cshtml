@model ConfigWebViewModel;
@using BJ.Contract.ViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="page-header">
    <h2 class="header-title">Chi tiết thông tin cấu hình web</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a href="/cau-hinh-trang.html " class="breadcrumb-item">Tất cả thông tin cấu hình web</a>

            <span class="breadcrumb-item active">Chi tiết thông tin cấu hình web</span>
        </nav>
    </div>
</div>
<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.Title</h4>
                <p class="text-muted m-b-0">Code: @Model.Id</p>
            </div>
        </div>
        <div class="m-b-15">
            <button class="btn btn-warning" onclick="location.href='/cap-nhat-cau-hinh-trang/@Model.Id'" type="button">
                <i class="anticon anticon-edit"></i>
                <span>Cập nhật</span>
            </button>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-overview">Tổng quan</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-language">Ngôn ngữ sẵn có</a>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-overview">

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin chi tiết</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                <tr>
                                    <td>Thông tin:</td>
                                    <td>	@Model.Title</td>
                                </tr>
                                <tr>
                                    <td>Hoạt động:</td>
                                    <td>
                                        @if (Model.Active == true)
                                        {
                                            <span class="badge badge-pill badge-cyan">Có</span>

                                        }
                                        else
                                        {
                                            <span class="badge badge-pill badge-red">Không</span>

                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Thứ tự</td>
                                    <td>@Model.SortOrder</td>
                                </tr>
                                <tr>
                                    <td>Đường dẫn web</td>
                                    <td>@Model.Url</td>
                                </tr>
                                <tr>
                                    <td>Nội dung:</td>
                                    <td>	@Html.Raw(Model.Description)</td>
                                </tr>
                                <tr>
                                    <td>Ngày tạo:</td>
                                    <td>@Model.DateCreated</td>
                                </tr>
                                <tr>
                                    <td>Ngày cập nhật:</td>
                                    <td>@Model.DateUpdated</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
           
            
        </div>
        <div class="tab-pane fade show" id="product-language">

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin chi tiết</h4>
                    <div class="table-responsive">
                        <table class="product-info-table m-t-20">
                            <tbody>
                                @foreach (var item in Model.DetailConfigWebTranslationDtos)
                                {
                                    <tr>

                                        <td>@item.LanguageId</td>
                                        <td class="text-dark font-weight-semibold">@item.Title</td>
                                        <td>
                                            <a href="/chi-tiet-cau-hinh-trang/@Model.Id/ngon-ngu/@item.Id/xem-chi-tiet">
                                                <span class="badge badge-pill badge-info">Xem chi tiết</span>

                                            </a>
                                            <a href="/chi-tiet-cau-hinh-trang/@Model.Id/ngon-ngu/@item.Id/cap-nhat">
                                                <span class="badge badge-pill badge-warning">Cập nhật</span>

                                            </a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
