    <script>
        $("#checkbox-newpage").on("click", function () {

            if ($(this).attr("clicked") == "false") {
                $("#addressurl").show();
                $("#webdetail").show();
                $(this).attr("clicked", "true");
                $("#nameconfig").text("Tiêu đề trang web");

            }else{
                $("#addressurl").hide();
                $("#webdetail").hide();
                $(this).attr("clicked", "false");
                $("#nameconfig").text("Thông tin cấu hình");

            }

        });
        $("#checkbox-autosort").on("click", function () {

            if ($(this).attr("clicked") == "false") {

                $("#sortnumber").hide();
                $("#sortnumber").hide();
                $(this).attr("clicked", "true");

            } else {
                $("#sortnumber").show();
                $("#sortnumber").show();
                $(this).attr("clicked", "false");

            }

        });
    </script>
