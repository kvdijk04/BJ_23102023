                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productCategory">Mục cấu hình</label>
                        <select class="select2" asp-for="@Model.CreateDetailConfigWebDto.ConfigWebId" asp-items="ViewBag.ConfigWebId" required>
                            <option value="0">Chọn loại</option>
                        </select>
                    </div>

                    <div class="form-group" id="sortnumber" >
                        <label class="font-weight-semibold" for="name">Thứ tự</label>
                        <input type="text" class="form-control" id="name" placeholder="Thứ tự" asp-for="@Model.CreateDetailConfigWebDto.SortOrder">
                    </div>

                    <div class="form-group" id="addressurl" style="display:none">
                        <label class="font-weight-semibold" for="productCategory">Đường dẫn web</label>
                        <input type="text" class="form-control" id="name" placeholder="Đường dẫn web" asp-for="@Model.CreateDetailConfigWebTranslationDto.Url">

                    </div>
                    
                    <div class="form-group" id="webdetail" style="display:none">
                        <label class="font-weight-semibold" for="productBrand">Nội dung web hiển thị</label>
                        <textarea class="form-control" id="Description" placeholder="Nội dung" asp-for="@Model.CreateDetailConfigWebTranslationDto.Description"></textarea>
                    </div>
                </div>
               
            </div>
        </div>


    </div>
</form>
