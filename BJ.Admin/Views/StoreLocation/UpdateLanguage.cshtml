@using BJ.Contract.Translation.Store;
@model UpdateStoreLocationTranslationDto;
<form asp-action="UpdateLanguage" method="post" enctype="multipart/form-data">
    <div class="page-header">
        <h2 class="header-title">Cập nhật ngôn ngữ</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                <a href="/tat-ca-cua-hang.html " class="breadcrumb-item">Tất cả cửa hàng</a>
                <a href="/chi-tiet-cua-hang/@ViewBag.Id" class="breadcrumb-item">@ViewBag.Name</a>
                <a href="#" class="breadcrumb-item">Ngôn ngữ</a>
                <span class="breadcrumb-item active">Cập nhật ngôn ngữ</span>
            </nav>

        </div>
    </div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                @* <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                <img src="@Configuration["BaseAddress"]/ImageProduct/@Model.UpdateProductDto.ImagePathIngredients"  alt="">
                </div> *@
                <div class="m-l-15">
                    <h4 class="m-b-0">Tên: @Model.Name </h4>
                    <a href="/chi-tiet-cua-hang/@ViewBag.Id" style="text-decoration:underline">Thông tin chi tiết</a>
                </div>
            </div>
            <div class="m-b-15">
                <button type="submit" class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Lưu</span>
                </button>
                <button class="btn btn-info" onclick="location.href='/chi-tiet-cua-hang/@ViewBag.Id/them-moi-ngon-ngu'" type="button">
                    <i class="anticon anticon-plus-circle"></i>
                    <span>Thêm mới ngôn ngữ</span>
                </button>
            </div>

        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin chi tiết</a>
            </li>

        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="catName">Tên cửa hàng</label>
                        <input type="text" class="form-control" id="catName" placeholder="Tên cửa hàng" value="@Model.Name" asp-for="@Model.Name" required>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Address">Địa chỉ</label>
                        <input type="text" class="form-control" id="address" placeholder="Địa chỉ" value="@Model.Address" asp-for="@Model.Address" required>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Address">Thành phố</label>
                        <input type="text" class="form-control" id="city" placeholder="Thành phố" value="@Model.City" asp-for="@Model.City">
                    </div>

                </div>


            </div>


        </div>
    </div>
</form>
