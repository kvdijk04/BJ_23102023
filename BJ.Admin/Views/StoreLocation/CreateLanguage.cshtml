@using BJ.Contract.Translation.Store;
@model CreateStoreLocationTranslationDto
<form asp-action="CreateLanguage" method="post" enctype="multipart/form-data">
    <div class="page-header">
        <h2 class="header-title">Tạo mới ngôn ngữ</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                <a href="/tat-ca-cua-hang.html " class="breadcrumb-item">Tất cả cửa hàng</a>
                <a href="/chi-tiet-cua-hang/@ViewBag.Id" class="breadcrumb-item">@ViewBag.Name</a>

                <span class="breadcrumb-item active">Tạo mới ngôn ngữ</span>
            </nav>
        </div>
    </div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
                <div class="m-l-15">
                    <h4 class="m-b-0">Tên: @ViewBag.Name</h4>
                </div>
            </div>
            <div class="m-b-15">
                <button type="submit" class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin cửa hàng</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên cửa hàng</label>
                        <input type="text" class="form-control" id="productName" placeholder="Tên cửa hàng" asp-for="@Model.Name" required>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productegory">Ngôn ngữ</label>
                        <select class="select2" asp-for="@Model.LanguageId" asp-items="ViewBag.Language">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Address">Địa chỉ</label>
                        <input type="text" class="form-control" id="address" placeholder="Địa chỉ" asp-for="@Model.Address" required>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Address">Thành phố</label>
                        <input type="text" class="form-control" id="city" placeholder="Thành phố" asp-for="@Model.City" required>
                    </div>
                </div>
            </div>
        </div>


    </div>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="~/assets/vendors/select2/select2.min.js"></script>
<script>
    $('.select2').select2();
</script>